print("----------------------------------------------------------------- Závěrečný úkol Lekce 6")


import random                  # mohla jsem použít i ranodm.choice

moznosti = ['kamen', 'nuzky', 'papir']
hrac_volby = list()
pocitac_volby = list()

while len(hrac_volby) != 3 and len(pocitac_volby) != 3:
    volba_hrac = random.randint(0,2)
    hrac_volby.append(moznosti[volba_hrac])

    volba_pocitac = random.randint(0,2)
    pocitac_volby.append(moznosti[volba_pocitac])

    #print(hrac_volby, pocitac_volby)

for x in range(3):
    if hrac_volby[x] == pocitac_volby[x]:
        vysledek = "Remíza!"
    elif hrac_volby[x] == "kamen" and pocitac_volby[x] == "nuzky" or hrac_volby[x] == "nuzky" and pocitac_volby[x] == "papir" or hrac_volby[x] == "papir" and pocitac_volby[x] == "kamen" :
        vysledek = "Vyhrává hráč!"
    else:
        vysledek = "Vyhrává počítač!"

    print(f"Výsledek: {vysledek}")











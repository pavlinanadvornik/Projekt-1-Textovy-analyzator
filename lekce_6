import random
import statistics

print("--------------------------------------------------------1) vybere 10 náhodných čísel ")
#for c in range(10):
#    print(random.randint(0, 1000))

deset_nahodnych = [random.randint(0,1000) for _ in range(10)]
print(deset_nahodnych)


print(random.choices(range(0, 1001), k=10)) #chci vybrat 10 prvků 


print("-------------------------------------------------------- 3) 10 náhodných celých čísel ")
nahodna_cisla = [random.randint(0, 10000) for _ in range(10)]
print(nahodna_cisla)


print("--------------------------------------------------------- 4) průměrná hodnota ")
prumer = statistics.mean(nahodna_cisla)
print(prumer)




from math import pow, pi
plochy = []
polomery = (1, 2, 3, 4, 5)

for r in polomery:
    plochy.append(pow(r, 2) * pi)

print(plochy)

print("--------------------- zápis pomocí list comprehension ")
plochy = [pow(r,2) * pi for r in polomery]
print(plochy)


print("------------------------------------------ modul collections ")

pocitadlo = collections.Counter("absdeabsdabcaba")
print(pocitadlo.most_common(3))

deq = collections.deque([1, 2, 3, 4, 5]) # vypadá jako list, ale jde do něj vložit/smazat něco i z levé strany (v listu jen z pravé)
print(deq)

deq.append(5)
print(deq)

deq.appendleft(3)
print(deq)

print("------------------------------------------ modul itertools ")

colors = itertools.cycle(["red", "green", "blue"])
for o in range(10):
    print(next(colors))


for pair in zip([1,2], ["a", "b"], [1,2]):
    print(pair)

print("----------- spojí každý s každým")
for pair in itertools.product([1, 2], ['a', 'b']):
    print(pair)

print("----------- vezme x prvků z kolekce hodnot")
for p in itertools.permutations([1, 2, 3, 4], 2):
    print(p)

print("----------- neřeší pořadí ")
for c in itertools.combinations([1, 2, 3, 4], 2):
    print(c)

